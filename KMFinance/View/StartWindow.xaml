<Window x:Class="KMFinance.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMFinance"
        mc:Ignorable="d"
        Title="StartWindow" Height="590" Width="975" ResizeMode="CanMinimize">

    <!--<Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ResourceKey=}"/>
        <Setter Property="BorderBrush" Value="#FFE2A90B"/>
    </Window.Resources>-->

    <Grid Background="#FF3EC6C8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0" Background="#FFE2A90B">
            <Label Content="Home" HorizontalAlignment="Left" Margin="18,52,0,0" VerticalAlignment="Top" Height="23" Width="44" FontSize="11"/>
            <Label Content="Cards" HorizontalAlignment="Left" Margin="19,110,0,0" VerticalAlignment="Top" Height="23" Width="44" FontSize="11"/>
            <Label Content="Deposits" HorizontalAlignment="Left" Margin="12,177,0,0" VerticalAlignment="Top" Height="23" Width="54" FontSize="11" RenderTransformOrigin="-0.091,3.061"/>
            <Label Content="Credits" HorizontalAlignment="Left" Margin="14,237,0,0" VerticalAlignment="Top" Height="23" Width="54" FontSize="11" RenderTransformOrigin="-0.091,3.061"/>
            <Label Content="Settings" HorizontalAlignment="Left" Margin="11,522,0,0" VerticalAlignment="Top" Height="23" Width="57" FontSize="11" RenderTransformOrigin="-0.091,3.061"/>
        </Grid>
        <Button x:Name="butHome"
                Command="{Binding butMenuHome_Click}"
            HorizontalAlignment="Center" Margin="10,22,10,0"
                VerticalAlignment="Top" Height="30" Width="32" BorderBrush="#FFE2A90B">
            <Button.Background>
                <ImageBrush ImageSource="/KMFinance;component/Images/Home.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="butCards"
                Command="{Binding butMenuCards_Click}"
            HorizontalAlignment="Center" Margin="23,85,22.2,0"
            VerticalAlignment="Top" Height="30" Width="38" BorderBrush="#FFE2A90B">
            <Button.Background>
                <ImageBrush ImageSource="/KMFinance;component/Images/Cards.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="butDeposits"
                Command="{Binding butMenuDeposits_Click}"
            HorizontalAlignment="Center" Margin="23,147,22.2,0"
            VerticalAlignment="Top" Height="30" Width="36" BorderBrush="#FFE2A90B">
            <Button.Background>
                <ImageBrush ImageSource="/KMFinance;component/Images/Deposits.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="butCredits"
                Command="{Binding butMenuCredits_Click}"
            HorizontalAlignment="Center" Margin="23,212,22.2,0"
            VerticalAlignment="Top" Height="30" Width="36" BorderBrush="#FFE2A90B">
            <Button.Background>
                <ImageBrush ImageSource="/KMFinance;component/Images/Credits.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="butSettings"
                Command="{Binding butMenuSettings_Click}"
            HorizontalAlignment="Center" Margin="18,495,16.4,0"
            VerticalAlignment="Top" Height="30" Width="36" BorderBrush="#FFE2A90B">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/KMFinance;component/Images/Settings.png"/>
            </Button.Background>
        </Button>


        <Frame Grid.Column="1" 
               Background="#FF00633F"
               Content="{Binding CurrentPage}"
               NavigationUIVisibility="Hidden"
               Opacity="{Binding FrameOpacity}">
        </Frame>


        <Grid Grid.Column="2" Background="#FFFFDD7E">

            <Grid.RowDefinitions>
                <RowDefinition Height="56"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

 
            <Grid Grid.Row="0">
                <Border  BorderThickness="2" BorderBrush="Black">
                    <TextBlock Text="Курс валют" 
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                           Margin="90,10,0,0" Foreground="#FFAD3939" FontSize="24" FontStyle="Italic" FontWeight="Bold"/>
            </Border>
        </Grid>
        

        <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.ColumnSpan="2">
                    <TextBlock Grid.Column="0" Text="Валюта" Grid.ColumnSpan="2"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="16" FontStyle="Italic" FontWeight="Bold"/>
                    </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="2">
                    <TextBlock Grid.Column="2" Text="Покупка"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="3">
                    <TextBlock Grid.Column="3" Text="Продажа"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
            </Grid>
                 
            
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.ColumnSpan="2">
                <TextBlock Grid.Column="1" Text="USD"
                           HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                           Foreground="#FFAD3939" FontSize="12" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="2">
                    <TextBlock Grid.Column="2" Text="{Binding setPurchaseDollar}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="3">
                <TextBlock Grid.Column="3" Text="{Binding setSaleDollar}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Image Source="/KMFinance;component/Images/SignUSD.png"
                       Height="30"></Image>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.ColumnSpan="2">
                <TextBlock Grid.Column="1" Text="EUR"
                           HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                           Foreground="#FFAD3939" FontSize="12" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="2">
                <TextBlock Grid.Column="2" Text="{Binding setPurchaseEuro}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="3">
                <TextBlock Grid.Column="3" Text="{Binding setSaleEuro}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Image Source="/KMFinance;component/Images/SignEUR.png"
                       Height="30"></Image>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.ColumnSpan="2">
                <TextBlock Grid.Column="1" Text="RUB"
                           HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                           Foreground="#FFAD3939" FontSize="12" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="2">
                <TextBlock Grid.Column="2" Text="{Binding setPurchaseRUB}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="3">
                <TextBlock Grid.Column="3" Text="{Binding setSaleRUB}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Image Source="/KMFinance;component/Images/SignRUB.png"
                       Height="32"></Image>
            </Grid>
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.ColumnSpan="2">
                <TextBlock Grid.Column="1" Text="GPB"
                           HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                           Foreground="#FFAD3939" FontSize="12" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="2">
                <TextBlock Grid.Column="2" Text="{Binding setPurchaseGBP}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Border  BorderThickness="2" BorderBrush="Black" Grid.Column="3">
                <TextBlock Grid.Column="3" Text="{Binding setSaleGBP}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FFAD3939" FontSize="15" FontStyle="Italic" FontWeight="Bold"/>
                </Border>
                <Image Source="/KMFinance;component/Images/SignGPB.png"
                       Height="36"></Image>
            </Grid>




