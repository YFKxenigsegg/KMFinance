<Page x:Class="KMFinance.Pages.Cards"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KMFinance.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="560.8" d:DesignWidth="598.4"
      Title="Cards">


    <Grid>

        <Image Source="/KMFinance;component/Images/Cards.png" Height="400" Width="450"/>

        <Canvas>
            <Label Content="{Binding LblGetCardNo}" HorizontalAlignment="Left" 
               VerticalAlignment="Top" Width="244" Background="White" 
                   Canvas.Left="140" Canvas.Top="243" FontStyle="Italic" FontSize="20"/>
            <Label Content="KMFinance" HorizontalAlignment="Left" 
               VerticalAlignment="Top" Width="70" Foreground="#FFE2A90B" 
                   FontStyle="Italic" Canvas.Left="227" Canvas.Top="140"/>
            <Label Content="{Binding LblGetNameSurnameCard}" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" Width="142" Foreground="#FFE2A90B" 
               FontStyle="Italic" Canvas.Left="140" Canvas.Top="321"/>
        </Canvas>

    </Grid>
</Page>
