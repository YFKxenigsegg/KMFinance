<Page x:Class="KMFinance.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KMFinance.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="425"
      Title="Home">

    <Grid>
        <Canvas>
            <Label Content="Balance now, " HorizontalAlignment="Center" 
               Margin="43,107,216.8,0" VerticalAlignment="Top" 
               FontSize="22" Width="165" Foreground="White"
               FontFamily="Lucida Console"/>
            <Label Name="lblDateNow"
            Content="{Binding LblGetDateNow}" HorizontalAlignment="Left" 
               Margin="205,108,0,0" VerticalAlignment="Top" FontSize="16" Width="93"
               Foreground="White"/>
            <Label 
                Content="{Binding LblGetAmout}" HorizontalAlignment="Left" Margin="47,147,0,0" 
               VerticalAlignment="Top" Height="59" Width="254" FontSize="24"
                Foreground="White"/>
            <Label
                Content="{Binding LblGetCardNo}" Canvas.Left="260" 
                BorderBrush="Black" Canvas.Top="109" 
                Height="35" Width="95" FontSize="16"
                Foreground="White"/>
        </Canvas>
    </Grid>
</Page>
